{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "byond",
            "request": "launch",
            "name": "DS Debug",
            "dmb": "${workspaceFolder}/${command:CurrentDMB}"
        },
        {
            "type": "byond",
            "request": "launch",
            "name": "Build & DS Debug",
            "preLaunchTask": "dm: build - ${command:CurrentDME}",
            "dmb": "${workspaceFolder}/${command:CurrentDMB}"
        },
        {
            "name": "Fetch, Make and commit changelogs",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/tools/ChangelogGenerator/FetchMakeCommit.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Make Changelogs",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet-script",
            "logging": {
                "moduleLoad": false
            },
            "args": [
                "${workspaceFolder}/tools/ChangelogGenerator/Make.csx"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Fetch Changelogs",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet-script",
            "logging": {
                "moduleLoad": false
            },
            "env": {
                "GITHUB_REPOSITORY": "ChaoticOnyx/OnyxBay"
            },
            "args": [
                "${workspaceFolder}/tools/ChangelogGenerator/Fetch.csx"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Nano Watch",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/nano/Watch.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        }
    ]
}
